{
  "compilerOptions": {
    "lib": ["dom", "es2022"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
